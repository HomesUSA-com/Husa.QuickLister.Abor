{
    "Api": {
        "Policies": {
            "Claims": [
                {
                    "Name": "QuiclisterAPIPolicy",
                    "Type": "scope",
                    "AllowedValues": [ "quicklisterapi" ]
                }
            ],
            "Roles": [
                {
                    "Name": "MLSAdministrator",
                    "RolesClaim": [ "MLSAdministrator" ]
                }
            ]
        }
    },
    "Application": {
        "QuicklisterUIUri": "http://localhost",
        "FeatureFlags": {
            "IsDownloaderEnabled": true,
            "FindEmailLeads": true,
            "IsXmlBusHandlerEnabled": true,
            "EnableBusHandlers": true,
            "AllowManualListingUnlock": false
        },
        "MediaAllowed": {
            "SaleListingMaxAllowedMedia": 40,
            "LotListingMaxAllowedMedia": 40,
            "CommunityMaxAllowedMedia": 60,
            "PlanMaxAllowedMedia": 60
        },
        "ListingRequest": {
            "MinRequiredMedia": 4,
            "MaxAllowedMedia": 40
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Debug" ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Debug",
                "System": "Debug",
                "EntityFramework.Core": "Debug",
                "Microsoft.Hosting.Lifetime": "Debug",
                "Microsoft.AspNetCore": "Debug",
                "Microsoft.AspNetCore.Authentication": "Debug",
                "Microsoft.AspNetCore.Mvc": "Debug",
                "Microsoft.AspNetCore.Authorization": "Debug",
                "System.Net.Http": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Debug",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
                }
            }
        ]
    },
    "ServiceBus": {
        "LockLegacyListingQueue": "fake-queue",
        "ConnectionString": "fake-test-connection-string",
        "PhotoService": {
            "TopicName": "fake-topic-user",
            "SubscriptionName": "fake-subscription"
        },
        "MediaService": {
            "TopicName": "fake-topic-media"
        },
        "NotesService": {
            "TopicName": "fake-topic-notes"
        },
        "DownloaderService": {
            "TopicName": "fake-topic-downloader"
        },
        "ImportMlsMedia": {
            "TopicName": "fake-topic-import-mls-media"
        }
    },
    "CosmosDb": {
        "Endpoint": "fake-test-connection-string",
        "AuthToken": "auth-token-to-replace",
        "DatabaseName": "abortest",
        "SaleCollectionName": "saleRequest",
        "LotCollectionName": "lotrequest",
        "LeaseCollectionName": "leaserequest"
    }
}
